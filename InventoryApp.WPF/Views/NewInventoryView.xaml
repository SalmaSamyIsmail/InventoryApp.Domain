<Window x:Class="InventoryApp.WPF.Views.NewInventoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryApp.WPF.Views"
        mc:Ignorable="d"
        Title="NewInventoryView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Name" Grid.ColumnSpan="2" Margin="10"/>
        <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Category" Grid.ColumnSpan="2" Margin="10"/>
        <TextBox x:Name="txtCategory" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Original Stock" Grid.ColumnSpan="2" Margin="10"/>
        <TextBox x:Name="txtOrginalStock" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="4" Grid.Column="1" Text="Stock" Grid.ColumnSpan="2" Margin="10"/>
        <TextBox x:Name="txtStock" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSave" Grid.Row="5" Grid.Column="3" Margin="10" Width="40" Content="Save" Click="btnSave_Click"  />

    </Grid>
</Window>
